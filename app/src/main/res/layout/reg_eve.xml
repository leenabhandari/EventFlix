    <RelativeLayout tools:context="com.example.leena.mypills.LoginActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#483d8b">

    <!--</ScrollView>-->

    <EditText
        android:id="@+id/evetime"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/renamee"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint=" Timing(24 hr)"
        android:inputType="time" />

    <EditText
        android:id="@+id/evedesc"
        android:layout_width="245dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="204dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint=" Description"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/evename"
        android:layout_width="247dp"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint=" Event Name"
        android:inputType="textPersonName"


        />


    <ImageButton
        android:id="@+id/post_img1"
        android:layout_width="match_parent"
        android:layout_height="115dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        app:srcCompat="@drawable/select_image" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/textView4" android:layout_alignParentTop="true" android:textSize="20sp" android:textColor="@color/whitee" android:text="Registration" android:layout_centerHorizontal="true"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_below="@+id/textView4" android:id="@+id/imageView" android:src="@mipmap/ic_launcher1_round" android:layout_marginEnd="31dp" android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/renamee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/evename"
        android:textColor="@color/whitee"
        android:layout_marginEnd="13dp"
        android:text="Profile Name" />

    <Button
        android:id="@+id/reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_round"
        android:text="Register"
        android:theme="@style/PrimaryButton" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="@color/whitee" android:id="@+id/textView10" android:text="Want to add some photos?" android:layout_centerHorizontal="true" android:layout_marginBottom="191dp" android:layout_alignParentBottom="true"/>

    <Button android:theme="@style/PrimaryButton" android:background="@drawable/button_round" android:layout_height="wrap_content" android:layout_width="111dp" android:id="@+id/addloc" android:layout_marginTop="193dp" android:layout_alignParentTop="true" android:text="Select location" android:layout_alignParentEnd="true" />

    <Spinner android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_alignParentStart="true" android:id="@+id/spinner" android:layout_marginTop="160dp" android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/date1"
        android:layout_width="244dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint=" Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/price"
        android:layout_width="104dp"
        android:layout_height="43dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/date1"
        android:background="@drawable/edit_round"
        android:ems="10"
        android:hint=" Cost"
        android:inputType="numberDecimal" />

</RelativeLayout>